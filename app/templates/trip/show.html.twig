{% extends 'base.html.twig' %}

{% block title %}Trip{% endblock %}

{% block body %}
    <h1>Trip</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ trip.id }}</td>
            </tr>
            <tr>
                <th>StartLocation</th>
                <td>{{ trip.startLocation }}</td>
            </tr>
            <tr>
                <th>EndLocation</th>
                <td>{{ trip.endLocation }}</td>
            </tr>
            <tr>
                <th>StartDateTime</th>
                <td>{{ trip.startDateTime ? trip.startDateTime|date('d.m.Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>EndDateTime</th>
                <td>{{ trip.endDateTime ? trip.endDateTime|date('d.m.Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Drivenkilometers</th>
                <td>{{ trip.drivenkilometers }}</td>
            </tr>

            <tr>
                <th>Fahrzeug</th>
                <td><a href="{{ path('app_car_update', {'id': trip.car.id}) }}">{{ trip.car.description }} ({{ trip.car.plate }})</a></td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_trip_index') }}">back to list</a>

    <a href="{{ path('app_trip_edit', {'id': trip.id}) }}">edit</a>

    {{ include('trip/_delete_form.html.twig') }}
{% endblock %}
